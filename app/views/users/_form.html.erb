<%= form_for @user do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :height, value: "Height (in inches)" %><br>
  <%= f.number_field :height %><br>

  <%= f.label :happiness, value: "How happy are you? (1-5 scale)" %><br>
  <%= f.number_field :happiness %><br>

  <%= f.label :nausea, value: "How nauseous are you? (1-5 scale)" %><br>
  <%= f.number_field :nausea %><br>

  <%= f.label :tickets, value: "How many dollars are in your pocket?" %><br>
  <%= f.number_field :tickets %><br>

  <%= f.label :admin, value: "Check box if you are a theme park owner" %>
  <%= f.check_box :admin %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br><br>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
