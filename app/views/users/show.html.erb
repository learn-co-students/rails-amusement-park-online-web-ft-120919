<% if flash[:message] %>
  <h2><%= flash[:message] %></h2>
<% end %>

<h2>User Information</h2>
<ul>
  <li><%= "Name: #{@user.name}" %></li>
  <li><%= "Height: #{@user.height}" %></li>
  <li><%= "Mood: #{@user.mood}" %></li>
  <li><%= "Tickets: #{@user.tickets}" %></li>
  <% if @user.admin %>
    <li><%= "ADMIN" %></li> 
  <% end %>
</ul>

<br>

<h2><%= link_to "See attractions", attractions_path %> 

<br>

<h2><%= link_to "Log Out", logout_path, method: "post" %></h2>
