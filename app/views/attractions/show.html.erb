<h1><%= @attraction.name %></h1>

<h3>Happiness Rating: <%= @attraction.happiness_rating %></h3>
<h3>Nausea Rating: <%= @attraction.nausea_rating %></h3>
<h3>Tickets: <%= @attraction.tickets %></h3>
<h3>Minimum Height: <%= @attraction.min_height %></h3><br>

<% if current_user.admin? %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction), class: "btn btn-primary" %>
<% else %>
  <%= form_for @ride do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :attraction_id, value: @attraction.id %>
    <br>
    <%= f.submit "Go on this ride", class: "btn btn-primary" %>
  <% end %>
<% end %>