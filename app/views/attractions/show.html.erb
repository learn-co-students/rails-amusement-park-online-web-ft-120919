<h1>Name: <%= @attraction.name %></h1>
<p>Total Number of Users: <%= @attraction.users.length %></p>
<p>Ticket Requirement: <%= @attraction.tickets %></p>
<p>Height Requirement: <%= @attraction.min_height %></p>
<p>Nausea Rating: <%= @attraction.nausea_rating %></p>
<p>Happy Rating:: <%= @attraction.happiness_rating %></p>


<%= form_for(@ride) do |f| %>
    <%= f.hidden_field(:attraction_id) %>
        <%= f.hidden_field(:user_id) %>

     <%= f.submit "Go on this ride"%>
<% end %>

<%= link_to "Edit Attraction", edit_attraction_path if @user.admin == true %>

<br>

<%= link_to "See attractions", attractions_path %>

