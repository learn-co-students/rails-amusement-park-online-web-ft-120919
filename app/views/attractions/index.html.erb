<h1>Listing attractions</h1>

<% @attractions.each do |attraction| %>
    <li>Name: <%= attraction.name %></li>
    <li>Ticktes: <%= attraction.tickets %></li>
    <li><%= link_to "Go on #{attraction.name}", attraction_path(attraction) if @user.admin == false %></li>
    <li><%= link_to "Show #{attraction.name}", attraction_path(attraction) if @user.admin == true %></li>

    <br>
<% end %>

<li><%= link_to "New Attraction", new_attraction_path%></li>