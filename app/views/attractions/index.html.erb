<h1>Attractions</h1>

<% if current_user.admin? %>
  <%= link_to "New Attraction", new_attractions_path, class: "btn btn-primary"%><br><br>
<% end %>

<ul>
<% @attractions.each do |a| %>
  <li>
    <% if current_user.admin? %>
      <%= link_to "Show #{a.name}", attraction_path(a) %>
    <% else %>
      <%= link_to "Go on #{a.name}", attraction_path(a) %>
    <% end %>
  </li>
<% end %>
</ul>