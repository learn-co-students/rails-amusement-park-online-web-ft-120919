<%= form_for @attraction do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :min_height, value: "Minimum Height (in inches)" %><br>
  <%= f.number_field :min_height %><br>

  <%= f.label :happiness_rating, value: "How happy will this make guests? (1-5 scale)" %><br>
  <%= f.number_field :happiness_rating %><br>

  <%= f.label :nausea_rating, value: "How nauseous will this make the guests? (1-5 scale)" %><br>
  <%= f.number_field :nausea_rating %><br>

  <%= f.label :tickets, value: "How many tickets will it cost?" %><br>
  <%= f.number_field :tickets %><br><br>

  <%= f.submit class: "btn btn-primary" %>
<% end %>